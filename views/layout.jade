!!! 5
html
  head
    title mdocs
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,300', rel='stylesheet', type='text/css')
    link(type='text/css', rel='stylesheet', href='/site.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/css/glyph.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/css/bootstrap.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/css/bootstrap-responsive.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/components/Font-Awesome/css/font-awesome.min.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/components/Font-Awesome/css/font-awesome.min.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/components/codemirror/lib/codemirror.css')
    link(type='text/css', rel='stylesheet', href='http://mdocs.io/css/site.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    script(src='//cdn.jsdelivr.net/jquery.jeditable/1.7.2/jquery.jeditable.js')
    script(src='/index.js')
    script(src='https://sdk.auth0.com/auth0.js#client=YOUR_DEV_CLIENT_ID')
    //if IE 7
      link(type='text/css', rel='stylesheet', href='http://mdocs.io/components/Font-Awesome/css/font-awesome-ie7.min.css')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.brand(href='/')
            strong m
            | docs

          //- user information
          a.btn.btn-navbar.pull-right(data-toggle="collapse", data-target=".nav-collapse")
            i.icon-list.icon-white
            span.caret
            
          if !user
            a#sign-in.sign-in.btn.btn-primary.pull-right(href="#", onclick="window.Auth0.signIn({onestep: true})") 
              i.icon-signin
              |  login
          else
            div.dropdown.pull-right
              a.btn.dropdown-toggle(href="#", data-toggle="dropdown", role="button") 
                | #{user.displayName} 
                span.caret
              ul.dropdown-menu(role="menu", aria-labelledby="dLabel")
                li 
                  a(href="/logout")
                    span.icon-signout
                    | sign out
          //- end user information

          .nav-collapse
            ul.nav
              li
                a#new(href='/new', title='create a new document')
                  i.icon-file
                  | New
              li
                a#save.disabled(href='#', title='save')
                  i.icon-save
                  | Save
              li
                a(href='/my-docs', title='open list of documents')
                  i.icon-folder-open
                  | My docs
              li#preview-menu
                a(href='#')
                  i.icon-eye-close
                  | Preview
              li
                a(href='#settings-popup', data-toggle='modal')
                  i.icon-share  
                  | Share
              li
                a(href='#key-shortcuts-help', data-toggle='modal', title='keyboard shortcuts')
                  i.icon-question-sign
            form.navbar-search.pull-left(action='/')
              input.search-query.span2(type='text', placeholder='Search', name='search')
    .container-fluid.desktop
      block content

  script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js')
